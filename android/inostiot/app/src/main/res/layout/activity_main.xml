<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="inostiot.inostiot.MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/icon"
        android:id="@+id/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/greet"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/greet"
        android:id="@+id/ip_address"
        android:hint="@string/ardadc_ip_address"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_monitor"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ip_address"
        android:id="@+id/start" android:background="@android:color/transparent"/>


</RelativeLayout>
